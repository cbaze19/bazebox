<!DOCTYPE html>
<html lang="en">
  <head>
    <%= erb :'partials/headHelper' %>
    <title>BazeBox</title>
  </head>
  <body style="padding-top:50px">

    <%= erb :'partials/navbar' %>

  	<table class="table table-striped">
      <thead>
        <tr>
          <th></th>
          <th class="col-md-3">File</th>
          <th>Size</th>
          <th>Date</th>
        </tr>
      </thead>
      <tbody>
        <% for i in 0..filenames.size-1 %>
        <tr>
          <td style="padding-left:40px"><a class="glyphicon glyphicon-remove-circle" href="/delete/<%= filenames[i] %>"></a></td>
          <td><a href="/download/<%= filenames[i] %>"><%= filenames[i] %></a></td>
          <td ><%= filesizes[i] %></td>
          <td>04/14/2015</td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <script src="js/upload.js"></script>
  </body>
</html>